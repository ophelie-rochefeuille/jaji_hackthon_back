{% extends 'base.html.twig' %}

{% block title %}Connecter vous!{% endblock %}

{% block body %}
<form class="container" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que: {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}
    <div class="formLogin">
        <form class="formForm">
            <div class="glitch formTitle">
                <h1 class=" h3 mb-3 font-weight-normal">Connexion</h1>
            </div>
            {# Champ Mail #}
            <div class="formulaire">
                <input type="email" placeholder="Email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <span class="symbol-input"><i class="bi bi-envelope"></i></span>
            </div>
            {# Champ Mot de passe #}
            <div class="formulaire">
                <input type="password" placeholder="Mot de passe" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <span class="symbol-input"><i class="bi bi-lock" aria-hidden="true"></i></span>
            </div>
            {# CSRF TOKEN #}
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            {# Checkbox Memoire #}
                {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html #}
            <div class="formulaireCheckbox checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                </label>
            </div>

            {# Bouton submit #}
            <div class="text-center formulaireSubmit button textReminder">
                <button class="formBtn btn-lg btn-primary" type="submit">
                    Me Connecter
                </button>
            </div>
            <div class="text-center">
                <a class="textReminder" href="{{ path('app_forgot_password_request') }}" > Mot de passe oublié </a>
            </div>
            <div class="text-center text-padding-top">
                <a class="textReminder" href="{{ path('app_register') }}" > Créer un Compte </a>
            </div>
        </form>
    </form>


    </div>
{% endblock %}
